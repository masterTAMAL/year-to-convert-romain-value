#include<stdio.h>
int romain(int n);
main()
{
	int n;
	printf("enetr the year :\n");
	scanf("%d",&n);
	romain(n);
	
}
 int romain(int n)
{
	if(n>=1000){
	
	printf("m");
	romain(n-1000);
}
else if(n>=500)
{
	printf("d");
	romain(n-500);
	
}
else if(n>=100)
{
	printf("c");
	romain(n-100);
	
}
else if(n>=50)
{
	printf("l");
	romain(n-50);
}
else if(n>=10)
{
	printf("x");
	romain(n-10);
	
}
else if(n>=5)
{
	printf("i");
	romain(n-5);
}

}
